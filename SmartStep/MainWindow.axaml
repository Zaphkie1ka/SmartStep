<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450" Width="400" Height="500"
        x:Class="SmartStep.MainWindow"
        Title="Авторизация">
        <StackPanel Orientation="Vertical">
                <Label Content="SmartStep" FontSize="28" Margin="4, 4" HorizontalAlignment="Center"/>
                <Label Content="Логин:" FontSize="20" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                <TextBox x:Name="loginbox" Width="350" Watermark="Введите логин..." PasswordChar="*" HorizontalAlignment="Center"/>
                <Label Content="Пароль:" FontSize="20" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                <TextBox x:Name="passbox" Width="350" Watermark="Введите пароль..." PasswordChar="*" HorizontalAlignment="Center"/>
                <Panel>
                        <Button Content="Войти" Click="LogIn_Click" HorizontalAlignment="Left" Margin="35,10,0,0"/> 
                        <Button Content="Гость" Click="Guest_Click" HorizontalAlignment="Right" Margin="0,10,35,0"/> 
                </Panel>
        </StackPanel>
</Window>
