<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="400" Height="500" Background="#FAEBD7"
        x:Class="SmartStep.Command"
        Title="Меню команд">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Команды" FontSize="28" HorizontalAlignment="Center"></Label>
                <Button Content="Добавить" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="Button_Add"></Button>
                <Button Content="Изменить" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="Button_Update"></Button>
                <Button Content="Удалить" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="Button_Delete"></Button>
                <Button Content="Выйти" Width="100" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Click="Button_Exit"></Button>
        </StackPanel>
</Window>
